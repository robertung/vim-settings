set number
syntax on
colorscheme vividchalk
filetype plugin indent on
set runtimepath+=$HOME/.vim/vim-haml
set history=10000
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set autoindent
set laststatus=2
set showmatch
set incsearch
set hlsearch
"set cursorline"
set cmdheight=1
set switchbuf=useopen
set showtabline=2
set winwidth=79
set shell=bash
set t_Co=256 " 256 colors
 
